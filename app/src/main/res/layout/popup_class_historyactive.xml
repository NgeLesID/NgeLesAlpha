<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/id_color2"
    android:fitsSystemWindows="true">

    <!--<include-->
        <!--android:id="@+id/toolbar"-->
        <!--layout="@layout/toolbar" />-->

    <!-- Bottom Button -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView8"
            android:background="@color/colorPrimary"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="English For Business"
            android:gravity="right"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/textView4"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_gravity="right">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grey_25"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="diselenggarakan oleh"
                android:id="@+id/textView"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_gravity="right"
                android:textColor="@color/transparentAccent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Wall Street ID"
                    android:id="@+id/textView3"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@color/transparentAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=", "
                    android:id="@+id/textView3"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@color/transparentAccent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Kemanggisan"
                    android:id="@+id/textView3"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@color/transparentAccent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Metode Belajar"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/transparentAccent"
                    android:id="@+id/textView10"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Group"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Charge"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/transparentAccent"
                    android:id="@+id/textView15"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="IDR"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/textView16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="1,000,000"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/textView23" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="/month"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView24"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Lama Pertemuan"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/transparentAccent"
                    android:id="@+id/textView17"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="2 Jam"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView18" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="181dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="0.73">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Hari Pertemuan"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/transparentAccent"
                    android:id="@+id/textView19"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Senin, Selasa, dan Rabu"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Jam Pertemuan"
                    android:gravity="right"
                    android:textSize="13sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/transparentAccent"
                    android:id="@+id/textView21"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="19.00-20.00"
                    android:gravity="left"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/textView22" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
