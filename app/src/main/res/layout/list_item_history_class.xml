<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/ListImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/test_institute"
            />



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center|left">

            <TextView
                android:id="@+id/TextViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_marginLeft="@dimen/normal_margin"
                android:text="@string/class_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_title"
                android:textStyle="bold"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextViewDescription1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="Start Date"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/normal_left"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TextViewStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="@string/history_class_start_date"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/normal_right"
                    android:textStyle="normal"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/TextViewDescription2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="End Date"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/normal_left"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/TextViewEndDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:text="@string/history_class_end_date"
                    android:textColor="@color/grey_600"
                    android:textSize="@dimen/normal_right"
                    android:textStyle="normal"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/id_color"
            android:orientation="horizontal"
            android:layout_width="13dp"
            android:layout_height="match_parent"
            android:background="@color/id_color"></LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>